<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
    <style name="myBaseTheme." parent="Theme.AppCompat.Light.NoActionBar">
        <!--make status bar and nav bar transparent-->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

        <!--translucent status bar-->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">?baseColorPrimaryDark</item>

        <item name="android:windowBackground">?baseColorPrimary</item>

        <!-- Customize your theme here. -->
        <item name="colorPrimary">?baseColorPrimary</item>
        <item name="colorPrimaryDark">?baseColorPrimaryDark</item>
        <item name="colorAccent">?baseColorAccent</item>
        <item name="android:textColorPrimary">?baseTextColorPrimary</item>
    </style>

    <style name="LightTheme" parent="myBaseTheme.">
        <item name="baseColorAccent">#D81B60</item>
        <item name="baseTextColorPrimary">#3E3F40</item>
        <item name="baseColorPrimary">#FFFF</item>
        <item name="baseColorPrimaryDark">#FFFF</item>
        <item name="baseColorDarkerGray">#aaa</item>
    </style>

    <style name="DarkTheme" parent="myBaseTheme.">
        <item name="baseColorAccent">#D81B60</item>
        <item name="baseTextColorPrimary">#FFFF</item>
        <item name="baseColorPrimary">#000</item>
        <item name="baseColorPrimaryDark">#000</item>
        <item name="baseColorDarkerGray">#aaa</item>
    </style>

    <style name="mBottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="mNavigationView" parent="Widget.Design.NavigationView">
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

</resources>
